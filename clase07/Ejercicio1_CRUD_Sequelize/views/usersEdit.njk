{% extends "master.njk" %}
{% block contenido %}

  <div class="card mb-4">
    <div class="card-header p-3">
      <h3>Modificar usuario</h3>
    </div>
    <div class="card-body">
      <form class="" action="/usuarios/modificar" method="post">
        <div class="mb-3">
          <input
                    name="id"
                    value="{{user.id}}"
                    placeholder="ingresar id..."
                    class="form-control"
                    required="true"
		    type="hidden"
/>
        </div>
        <div class="mb-3">
          <label for="firstname" class="form-label">{{user.sjsjs}}</label>
          <input
                    type="text"
                    name="firstname"
                    value="{{user.firstname}}"
                    placeholder="ingresar nombre..."
                    class="form-control"
                    required="true"
/>
        </div>
        <div class="mb-3">
          <label for="lastname" class="form-label">Apellido</label>
          <input
                    type="text"
                    name="lastname"
                    value="{{user.lastname}}"
                    placeholder="ingresar apellido..."
                    class="form-control"
                    required="true"
/>
        </div>
        <div class="mb-3">
          <label for="age" class="form-label">Edad</label>
          <input
                    type="text"
                    name="age"
                    value="{{user.age}}"
                    placeholder="ingresar edad..."
                    class="form-control"
                    required="true"
/>
        </div>
        <button type="submit" name="button" class="btn btn-success">
          Modificar
        </button>
        <a class="btn btn-primary" href="/usuarios" role="button">Volver</a>
      </form>
    </div>
  </div>
{% endblock %}
